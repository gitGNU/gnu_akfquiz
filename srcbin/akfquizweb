# directory with the quizfiles (need not be exported by the webserver)
#my $QUIZ_DIR = '/var/www/cgi-data/akfquiz';
my $QUIZ_DIR = "$ENV{DOCUMENT_ROOT}/cgi-data/akfquiz";

############################################################################

# activate these for development - deactivate when done
use strict;
use warnings;
use CGI::Carp qw(fatalsToBrowser);
# I deliberately don't use the CGI module for efficiency

my $version = '4.4.1-beta10';
my $prg_name = 'AKFQuizWeb';
my $src_name = 'akfquizweb';
my $prg_version = "$prg_name $version";

# Internationalisation
# Note: the webpages may have different encondings,
# so you have to use escapes for non-ASCII characters here!

my %m_no_quiz_found = (
  en => 'No AKFQuiz-files found',
  de => 'Keine AKFQuiz-Dateien gefunden', 
  it => 'Nessun archivio AKFQuiz trovato',
  da => 'Ingen AKFQuiz filer fundet'
);

