  en => 'wrong, sorry',
  de => 'leider falsch',
  it => 'sbagliato, mi dispiace',
  da => 'beklager, det er forkert'
);

my %m_points = (
  en => 'points:',
  de => 'Punkte:',
  it => 'punti:',
  da => 'point:' # ???
);

