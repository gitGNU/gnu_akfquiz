  en => 'Error in input file',
  de => 'Fehler in der Eingabe-Datei',
  it => 'Errore nell\'archivio di input',
  da => 'Fejl i input filen'
);

my %m_time = (
  en => 'Elapsed time:',
  de => 'Ben&ouml;tigte Zeit:',
  it => 'Tempo trascorso:',
  da => 'Elapsed time:' # ???
);

my %m_contributions = (
  en => 'Contributions:',
  de => 'Beitr&auml;ge:',
  it => 'Contribuenti:',
  da => 'Contributions:' # ???
);

my %m_view = (
  en => 'view',
  de => 'anzeigen',
  it => 'sfogliare',
  da => 'view' # ???
);


# settings (don't change here)
my $title = 'Quiz';
my $author = '';
my $authorlink = '';
my $edited = '';
my $copyright = '';
my $license = '';
my $licenselink = '';
my $translator = '';
my $encoding = 'UTF-8';
my $language = 'en';
my $htmlcode = 0;
my $rtl = 0;
my $bidi = 0;
my $neutral = 0;
my $assessmentlink = '';
my $baseuri = '';
my $css = '';
my $keywords = '';
my $noindex = 0;
my $default = '';

my $doctype = '<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" '.
              '"http://www.w3.org/TR/html4/strict.dtd">';

my $script_name = $ENV{SCRIPT_NAME};
my $path_info = $ENV{PATH_INFO};

# handle command-line options
unless ($script_name) {
  unless ($ARGV[0]) {
    print "Try \"$src_name --help\" for more information\n";
    exit;
  }
  if ($ARGV[0] eq '--version') { &version }
  elsif ($ARGV[0] eq '--help') { &help }
  elsif ($ARGV[0] eq '--license') { &show_license }
  else {
    print "$src_name: unrecognized option \"$ARGV[0]\"\n";
    print "Try \"$src_name --help\" for more information\n";
    exit;
  }
}

my $quiz_started = 0; # quiz already started?
my $qnr = 0; # question number
my $points = 0;
my $maxpoints = 0;
my $evaluated = 0;
my $home = ''; # from which website did it come?
my $lang = 'en'; # just for supported languages

my $query;
if ($ENV{REQUEST_METHOD} eq 'POST') {
  read STDIN, $query, $ENV{CONTENT_LENGTH};
} else {
  $query = $ENV{QUERY_STRING};
}

my $result_page = !!$query; # is this the solution page?

# show help if no path is given
&help_html if !$path_info;

&get_browser_language;

if ($path_info =~ /\/$/) { &indexer }
elsif ($path_info =~ /\/--help$/) { &help_html }
elsif ($path_info =~ /\/--version$/) { &version_html }
elsif ($path_info =~ /\/--license$/) { &show_license }
elsif ($path_info =~ /\/$src_name$/) {&send_source_code }
elsif ($path_info eq '/q-brown.css') { &send_stylesheet('brown') }
elsif ($path_info eq '/q-blue.css') { &send_stylesheet('blue') }
elsif ($path_info eq '/q-school.css') { &send_style_school }
elsif ($path_info eq '/q-print.css') { &send_style_print }
elsif ($path_info eq '/akfquiz-icon.png') { &send_icon_grx }
elsif ($path_info eq '/wrong.png') { &send_wrong_grx }
elsif ($path_info eq '/correct.png') { &send_correct_grx }
elsif ($path_info eq '/school.png') { &send_school_grx }

if ($query) {
  if ($query =~ /\bformat=akfquiz/i) { &send_quizfile }
  elsif ($query =~ /\bformat=text/i) { &send_quizfile_as_text }
}

# just send quizfile if useragent explicitly accepts it
if ($ENV{HTTP_ACCEPT} and $ENV{HTTP_ACCEPT} =~ /application\/x-akfquiz/) {
  &send_quizfile }
else { &run_quiz }
exit;


# check boolean value
sub is_true { return $_[0] =~ /(?:ja|yes|true|1)/i }


sub run_quiz {
  my $file = $path_info;

  # get $home from the query
  if ($query) {
    $query =~ /\bhome=([^&]+)/;
    $home = $+;
    if ($home) {
      $home =~ s/%3A/:/g;
      $home =~ s/%2F/\//g;
    }
  }

  # add the file extension, unless it already has it
  $file .= '.akfquiz' unless $file =~ /.akfquiz$/;

  open F, "<$QUIZ_DIR$file" or &not_found;

  # skip until AKFQuiz is found (ignore UTF-8 BOM)
  while (<F>) { last if /^(?:\xEF\xBB\xBF)?\s*AKFQuiz/i }

  if (eof(F)) { close F; &error; }

  while (<F>) {
    next if /^\s*\#/ || /^\s*$/;  # ignore comment lines and empty lines
    last if /^\s*ende?/i;  # end of quiz reached?

    # read body (block-oriented keywords)
    if (/^\s*(?:question|frage|mc):/i) { &question('radio') }
    elsif (/^\s*(?:query|multi|anfrage|mcma):/i) { &question('checkbox') }
    elsif (/^\s*(?:intro|comment|kommentar):/i) { &comment }
    elsif (/^\s*(?:remark|hint|hinweis|anmerkung):/i) { &hint }
    elsif (/^\s*(?:fitbest|freeform|freiform):/i) { } # TODO
    elsif (/^\s*(?:assessment|auswertung):/i) { &assessment }
    elsif (/^\s*(?:assessment%|auswertung%):/i) { &assessmentpercent }
    elsif (!$quiz_started) { # read head (line-oriented keywords)
      if (/^\s*(?:title|titel):\s*(.*)/i) { $title=&htmlconvert($+) }
      elsif (/^\s*(?:auth?or):\s*(.*)/i) { $author=&htmlconvert($+) }
      elsif (/^\s*(?:auth?orur[il]|auth?orlink):\s*(.*)/i) { $authorlink=$+ }
      elsif (/^\s*(?:edited|bearbeitet):\s*(.*)/i) { $edited=&htmlconvert($+) }
      elsif (/^\s*copyright:\s*(.*)/i) { $copyright=&htmlconvert($+) }
      elsif (/^\s*(?:license|lizenz):\s*(.*)/i) { $license=&htmlconvert($+) }
      elsif (/^\s*(?:licenselink|licenseur[il]
             |lizenzlink|lizenzur[il]):\s*(.*)/ix) { $licenselink=$+ }
      elsif (/^\s*(?:translator|uebersetzer):\s*(.*)/i) 
            { $translator=&htmlconvert($+) }
      elsif (/^\s*(?:encoding|kodierung|charset|zeichensatz):\s*(.*)/i) 
            { $encoding=$+ }
      elsif (/^\s*(?:language|sprache):\s*(.*)/i) { &set_language($+) }
      elsif (/^\s*htmlcode:\s*(\w+)/i) { $htmlcode=&is_true($+) }
      elsif (/^\s*rtl:\s*(\w+)/i) { $rtl=&is_true($+) }
      elsif (/^\s*bidi:\s*(\w+)/i) { $bidi=&is_true($+) }
      elsif (/^\s*neutral:\s*(\w+)/i) { $neutral=&is_true($+) }
      elsif (/^\s*(?:assessmentur[il]|auswertungs?ur[il]
             |assessmentlink|auswertungs?link):\s*(.*)/ix) 
            { $assessmentlink=$+ }
      elsif (/^\s*(?:timeout|timelimit|zeitlimit):\s*(.*)/i) { } # TODO
      elsif (/^\s*(?:baseur[il]|hauptur[il]):\s*(.*)/i) { $baseuri=$+ }
      elsif (/^\s*(?:layout|css):\s*(.*)/i) { $css=$+ }
      elsif (/^\s*(?:keywords|stichworte):\s*(.*)/i) 
            { $keywords=&htmlconvert($+) }
      elsif (/^\s*javascript:\s*(.*)/i) { } # ignore
      elsif (/^\s*noindex:\s*(\w+)/i) { $noindex=&is_true($+) }
      elsif (/^\s*(?:default|standardantwort):\s*(.*)/i)
            { $default=&htmlconvert($+) }
      else { &error }
      } else { &error }
  } # while (<F>)
  close F;

  &evaluate if $result_page;
  &html_end;
  exit;
}


sub set_language {
  $language = shift; # global variable

  #  $lang is only set to supported languages
  $lang = $language if $m_new{$language};
}


sub get_browser_language {
  if ($ENV{HTTP_ACCEPT_LANGUAGE}) {
    # just the first 2 letters
    &set_language(substr $ENV{HTTP_ACCEPT_LANGUAGE}, 0, 2)
  }
}


sub html_start {
  # HTTP data
  print "Content-Type: text/html";
  print "; charset=$encoding" if $encoding;
  print "\n";
  print "Content-Language: $language\n" if $language;
  print "\n";

  # HTML data
  print "$doctype\n\n";

  if ($language) { print "<html lang='$language'>\n\n" }
     else { print "<html>\n\n" }

  print "<head>\n";

  if ($encoding) {
    print "<meta http-equiv='Content-Type' "
          . "content='text/html; charset=$encoding'>\n"
  }

  if ($language) { 
    print "<meta http-equiv='Content-Language' content='$language'>\n"
  }

  print "<meta name='generator' content='$prg_version'>\n";

  if ($noindex or $result_page) {
    print "<meta name='robots' content='noindex'>\n"
  }

  print "<title>$title</title>\n";

  print "<meta name='author' content='$author'>\n" if $author;
  print "<meta name='copyright' content='$copyright'>\n" if $copyright;
  print "<meta name='license' content='$license'>\n" if $license;
  print "<meta name='keywords' content='$keywords'>\n" if $keywords;

  print "<link rel='author' href='$authorlink'>\n" if $authorlink;
  print "<link rel='license' href='$licenselink'>\n" if $licenselink;

  print "<link rel='icon' type='image/png' "
        ."href='$script_name/akfquiz-icon.png'>\n";

  # prefetch graphics
  unless ($result_page) {
    print "<link rel='prefetch' href='$script_name/correct.png'>\n";
    print "<link rel='prefetch' href='$script_name/wrong.png'>\n";
  }

  # inline stylesheet
  print "\n<style type='text/css'>\n"
        . "\@media print { .buttons, .defanswer, .resultlink, noscript "
        . "{display:none} }\n"
        . "</style>\n\n";

  if ($css) {
      print "<link rel='stylesheet' type='text/css' "
            . "href='$css'>\n"
  }

  print "</head>\n\n<body>\n";
  print "<h1 id='top'>$title</h1>\n\n";

  &show_home if $home;

  &show_metadata;
  &start_form;
  $quiz_started = 1;
}


sub software_link {
  if ($src_name) {
    print "<hr>\n\n<div dir='ltr' class='made' "
          . "style='text-align:right'><small>\n"
          . "<a href='--version'>$prg_version</a><br>\n"
          . "</small></div>\n\n"
  }
}


sub html_end { 
  &end_form;
  &show_home if $home;
  &software_link;
  print "</body>\n</html>";
}


sub start_form {
  print "<form name='akfquiz' id='akfquiz' method='POST'";
  if ($result_page) {
    print " action=''" # no action
  } else {
    print " action='$script_name$path_info'"
  }
  print ">\n\n";
}


sub end_form {
  unless ($result_page) {
    my $time = time;

    if ($ENV{HTTP_REFERER}) {
      print "<input type='hidden' name='home'"
            . " value='$ENV{HTTP_REFERER}'>";
    }

    print "<div class='buttons'>\n";
    print "<input type='hidden' name='time' value='$time'>";
    print "<input type='submit' accesskey='r' "
          . "value='$m_result{$lang}'>\n";
    print "<input type='reset' accesskey='n' value='$m_new{$lang}'>\n";
    print "</div>\n";
  }

  print "</form>\n\n";
}


sub show_home {
  print "<div class='home'><small>"
        . "<a href='$home'>$m_back{$lang}</a>"
        . "</small></div>\n\n";
}


sub show_metadata {
  $author = &handle_uris($author) if $author;
  $copyright = &handle_uris($copyright) if $copyright;
  $edited = &handle_uris($edited) if $edited;
  $translator = &handle_uris($translator) if $translator;
  $license = &handle_uris($license) if $license;

  print "<dl id='metadata'>\n";

  print "<dt>$m_author{$lang}</dt> <dd>$author</dd>\n" if $author;
  print "<dt>Copyright:</dt> <dd>&copy; $copyright</dd>\n" if $copyright;
  print "<dt>$m_authorlink{$lang}</dt> "
        . "<dd><a rel='author external' "
        . "href='$authorlink'>$authorlink</a></dd>\n" if $authorlink;
  print "<dt>$m_edited{$lang}</dt> <dd>$edited</dd>\n" if $edited;
  print "<dt>$m_translator{$lang}</dt> <dd>$translator</dd>\n" if $translator;
  print "<dt>$m_license{$lang}</dt> <dd>$license</dd>\n" if $license;
  print "<dt>$m_licenselink{$lang}</dt> "
        . "<dd><a rel='license external' "
        . "href='$licenselink'>$licenselink</a></dd>\n" if $licenselink;

  print "</dl>\n\n";
}


sub show_block {
  print "<p>\n";

  while (<F>) {
    last if /^\s*$/;
    if (/^\s*\.\s*$/) { print "</p>\n\n<p>\n" } 
    else { print &htmlconvert($_) }
  }
  print "</p>\n";
}


sub ignore_block {
  while (<F>) { last if /^\s*$/ }
}


sub comment {
  &html_start unless $quiz_started;

  print "<div class='comment'>\n";
  &show_block;
  print "</div>\n\n";
}


sub hint {
  &html_start unless $quiz_started;

  if ($result_page) {
    print "<div class='hint'>\n";
    &show_block;
    print "</div>\n\n";
  }
  else { &ignore_block }
}


sub question {
  my $type = shift;

  &html_start unless $quiz_started;

  $qnr++;
  print "<div class='question' id='question$qnr'>\n";
  &show_block; # show question
  print "</div>\n\n";

  if ($result_page) { &show_answers($type) }
    else { &show_answers_form($type) }
}


sub show_answers_form {
  my $type = shift;
  my $anr = 0;
  my $answer;

  print "<div class='answer'>\n";

  while (<F>) {
    last if /^\s*$/;

    unless (/^\s*[+-]?\d+\s+(.+)$/) { &error } # find answer
    $answer = $+;
    $anr++;

    # multiple lines per answer?
    while ($answer =~ /(.+)\\\s*$/) { $answer = $+ . <F> }

    print "<div>\n<label>";
    print "<input name='q$qnr' type='$type' value='$anr'>\n";
    print &htmlconvert($answer);
    print "</label>\n</div>\n\n";
  }

  # default answer
  if ($default and $type eq 'radio') {
    $anr++;
    print "<div class='defanswer'>\n<label>";
    print "<input name='q$qnr'"
          . " type='$type' value='$anr' checked='checked'>\n";
    print "$default";
    print "</label>\n</div>\n\n";
    }

  print "</div>\n\n";
}


sub show_answers {
  my $type = shift;
  my $anr = 0;
  my $answerpoints;
  my $thispoints = 0;
  my $thismaxpoints = 0;
  my $answer;

  print "<div class='answer'>\n";

  while (<F>) {
    last if /^\s*$/;

    unless (/^\s*([+-]?\d+)\s+(.+)$/) { &error } # analyze answer-line
    $anr++;
    $answerpoints = $1;
    $answer = $2;

    if ($type eq 'radio')
      { $thismaxpoints = $answerpoints if $answerpoints > $thismaxpoints }
    else
      { $thismaxpoints += $answerpoints if $answerpoints > 0 }

    # multiple lines per answer?
    while ($answer =~ /(.+)\\\s*$/) { $answer = $+ . <F> }

    print "<div>\n<label";
    unless ($neutral) {
      print $answerpoints > 0 ? " class='correct'" : " class='wrong'";
    }
    print ">";
    print "<input name='q$qnr' type='$type' value='$anr' disabled='disabled'";
    if ($query =~ /q$qnr=$anr/) {
      print " checked='checked'";
      $thispoints = $answerpoints;
      $points += $thispoints;
      }
    print ">\n";
    print &htmlconvert($answer);
    print "</label>\n</div>\n\n";
  }

  # default answer
  if ($default and $type eq 'radio') {
    $answerpoints = 0;
    $anr++;
    print "<div class='defanswer'>\n<label";
    print " class='wrong'" unless $neutral;
    print ">\n";
    print "<input name='q$qnr' type='$type' value='$anr'";
    if ($query =~ /q$qnr=$anr/) { print " checked='checked'" }
    print ">$default</label>\n";
    print "</div>\n\n";
  }

  unless ($neutral) {
    print "<strong>\n".
          "<img width='18' height='18' ".
          "style='float:right; vertical-align:text-bottom' ";
    if ($thispoints > 0) {
      print "alt='- $m_right{$lang} -' src='$script_name/correct.png'>\n";
    } else {
      print "alt='- $m_wrong{$lang} -' src='$script_name/wrong.png'>\n";
    }
    print "</strong>\n";
  } # unless $neutral

  print "<div class='points'>$m_points{$lang} $thispoints</div>";
  print "</div>\n\n";

  $maxpoints += $thismaxpoints;
}


sub get_percentage {
  if ($points > 0) { return int(($points * 100 / $maxpoints) + 0.5) }
  else { return 0 }
}


sub get_assessmentlink {
  if ($assessmentlink !~ /\?$/) { return $assessmentlink }
  else { # question-mark at the end
    my $percent = &get_percentage;
    return $assessmentlink . "points=$points"
           . "&maxpoints=$maxpoints&percent=$percent";
  }
}


sub elapsed_time {
  if ($query =~ /\btime=(\d+)/) {
    my $elapsed = time - $+;
    if ($elapsed < 3600) { # less than 1 hour
      return sprintf('%02d:%02d', $elapsed/60%60, $elapsed%60)
    } else { # more than 1 hour
      return sprintf('%d:%02d:%02d', 
              $elapsed/3600%60, $elapsed/60%60, $elapsed%60)
    }
  } else  { return '' }
}


sub evaluate {
  if (!$evaluated and $maxpoints > 0) {
    my $time = &elapsed_time;

    print "<hr>\n\n";
    print "<div class='result' id='result'><strong>\n";
    printf $m_solution_summary{$lang}, $points, $maxpoints;
    print "<br>\n";
    if ($points > 0) {
      print "$m_solution_percent{$lang} ", &get_percentage, "%.\n";
    } else { print "$m_solution_not_enough{$lang}" unless $neutral }
    print "<br><br>$m_time{$lang} $time" if $time;
    print "</strong></div>\n\n";

    if ($assessmentlink) {
      my $link = &get_assessmentlink;
      print "<p><a href='$link'>$m_result{$lang}</a></p>\n\n";
    }
  } # if (!$evaluated and $maxpoints > 0)

  $evaluated = 1;
}


sub assessment {
  &html_start unless $quiz_started;
  &evaluate unless $evaluated;

  if ($assessmentlink or !$result_page) { &ignore_block }
  else {
    print "<div class='assessment'>\n";
    &show_block;
    print "</div>\n\n";
  }
}


sub assessmentpercent {
  &html_start unless $quiz_started;
  &evaluate unless $evaluated;

  if ($assessmentlink or !$result_page) { &ignore_block }
  else {
    my $percentage = &get_percentage;
    my $found = 0;
    my $old = 101; # something larger than 100
    my $text;
    my $value;

    while (<F>) {
      last if /^\s*$/;

      # analyze percentage-line
      unless (/^\s*(\d+)\s+(.+)$/) { &error }
      $value = $1;
      $text = $2;

      # multiple lines per answer?
      while ($text =~ /(.+)\\\s*$/) { $text = $+ . <F> }

      &error if $value > $old; # must be in descending order

      if (!$found and $percentage >= $value) {
          print "<div class='assessment'>\n$text\n</div>\n\n";
          $found = 1;
      }

      $old = $value;
    }

   &error if $value != 0; # last entry must be 0
  }
}


sub indexer {
  my @files = ();

  if (opendir D, "$QUIZ_DIR$path_info") {
    @files = grep { /.akfquiz$/ && -r "$QUIZ_DIR$path_info$_" } readdir D;
    closedir D;
  }

  print <<EOF;
Content-Type: text/html; charset=UTF-8

$doctype

<html>
<head>
<title>$prg_name</title>
<meta name='robots' content='noindex'>
<meta name='generator' content='$prg_version'>
<link rel='icon' type='image/png' href='$script_name/akfquiz-icon.png'>
<link rel='stylesheet' type='text/css' href='q-brown.css'>
</head>

<body>
<h1>$prg_name</h1>

<ul>
EOF

  if (@files) { 
    my $file;
    my $name;

    foreach $file (@files) {
      $name = $file;
      $name =~ s/.akfquiz$//;
      print "<li><a href='$name'>$name</a>\n";
      print "<small>("
            ."<a href='$file?format=akfquiz'"
            ."type='application/x-akfquiz'>AKFQuiz</a>"
            ." | <a href='$file?format=text' type='text/plain'>"
            ."$m_view{$lang}</a>"
            .")</small>\n";
      print "</li>\n";
    }
  } else {
    print "<div class='error'>$m_no_quiz_found{$lang}</div>\n"
  }

  print "</ul>\n\n";
  &software_link;
  print "</body>\n</html>\n";

  exit;
}


sub handle_uris {
  my $line = shift;
  my $rest;
  my $temp;
  my $URI;
  my $img;
  my $URIprefix;
  my $f;

  $rest = $line;
  $temp = '';

  do {
    $f = -1;

    # prefixes
    $img = index $rest, 'image:';
    $URIprefix = index $rest, 'URI:';
    $URIprefix = index $rest, 'URL:' if $URIprefix < 0;
    if ($URIprefix >= 0) { $f = $URIprefix + 4 }

    $f = index $rest, 'http:' if $f < 0;
    $f = index $rest, 'https:' if $f < 0;
    $f = index $rest, 'ftp:' if $f < 0;
    $f = index $rest, 'file:' if $f < 0;

    # only the above URIs can be handles for images
    $img = -1 if $f < 0;

    # check if URI comes directly after image:
    $img = -1 if ($img >= 0 and $f != $img+6 and $URIprefix != $img+6);

    $f = index $rest, 'mailto:' if $f < 0;
    $f = index $rest, 'tel:' if $f < 0;
    $f = index $rest, 'urn:' if $f < 0;
    $f = index $rest, 'URN:' if $f < 0;

    if ($f >= 0) {
      my $t;
      my $p;

      if ($img < 0) {
        $temp = $temp . substr $rest, 0, $f;
      } else {
        $temp = $temp . substr $rest, 0, $img;
      }

      $URI = substr $rest, $f;

      # search end of URI
      $t = length $URI;
      $p = index $URI, '&gt;';
      if ($p >= 0) { $t = $p if $p < $t }
      $p = index $URI, ' ';
      if ($p >= 0) { $t = $p if $p < $t }
      $p = index $URI, '\t';
      if ($p >= 0) { $t = $p if $p < $t }
      $p = index $URI, '&quot;';
      if ($p >= 0) { $t = $p if $p < $t }

      if ($t != length $URI) {
        $URI = substr $URI, 0, $t;
      }

      $rest = substr $rest, $f+$t;

      if ($img >= 0) {
        $temp = "$temp<img src='$URI' alt='[$URI]' "
                . "style='vertical-align:middle; float:right'>";
      } else {
        $temp = "$temp<a href='$URI' rel='external nofollow' target='_top'>"
                . "$URI</a>";
      }
    } # if (f > 0)
  } until ($rest eq '' or $f < 0);

  return $temp . $rest;
}


sub htmlconvert {
  my $line = shift;

  unless ($htmlcode) {
    $line =~ s/&/&amp;/g; # must be first
    $line =~ s/</&lt;/g;
    $line =~ s/>/&gt;/g;
    $line =~ s/\"/&quot;/g;
  }

  if ($quiz_started and !$htmlcode) { return &handle_uris($line) }
  else { return $line }
}


sub error {
  &html_start unless $quiz_started;

  # don't use block elements!
  print "<strong class='error' dir='ltr'>"
        ."$m_file_error{$lang}</strong><br>\n\n";
}


sub send_source_code {
  open F, "<$0" or &not_found;
  print "Content-Type: text/x-perl\n\n";
  while (<F>) { print }
  close F;
  exit;
}


# License is attached at the end
sub show_license {
  if ($script_name) {
    print "Cache-Control: public, max-age=43200\n"; # cache 12h
    print "Content-Type: text/plain; charset=US-ASCII\n\n" if $script_name;
  }

  while (<DATA>) { print }
  close DATA;
  exit;
}


sub send_quizfile {
  my $file = $path_info;

  # add the file extension, unless it already has it
  $file .= '.akfquiz' unless $file =~ /.akfquiz$/;

  open F, "<$QUIZ_DIR$file" or &not_found;
  print "Cache-Control: public, max-age=43200\n"; # cache 12h
  print "Content-Type: application/x-akfquiz\n\n";
  while (<F>) { print }
  close F;
  exit;
}


sub send_quizfile_as_text {
  my $file = $path_info;
  my @text;

  # add the file extension, unless it already has it
  $file .= '.akfquiz' unless $file =~ /.akfquiz$/;

  open F, "<$QUIZ_DIR$file" or &not_found;
  @text = <F>; # slurp
  close F;

  # find encoding
  foreach (@text) {
    if (/^\s*(?:encoding|kodierung|charset|zeichensatz):\s*(.*)/i) {
      $encoding = $+;
      last;
      }
  }

  print "Cache-Control: public, max-age=43200\n"; # cache 12h
  print "Content-Type: text/plain; charset=$encoding\n\n";
  foreach (@text) { print }
  exit;
}


