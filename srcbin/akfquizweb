sub send_stylesheet {
  my $style = shift;
  my ($font, $html_bgc, $box_bgc, $border_color);

  if ($style eq 'blue') {
    ($html_bgc, $box_bgc, $border_color) =
       ('#bbbbff', '#000055', '#5555AA');
  } elsif ($style eq 'brown') {
    ($html_bgc, $box_bgc, $border_color) =
      ('#d8d0c8', '#605030', '#605030');
  } else { &not_found }

  print <<EOF;
Cache-Control: public, max-age=604800
Content-Type: text/css

\@import url(q-print.css);

/* common to all media */
body {
     max-width:50em;
     margin-top:1em;
     margin-bottom:1em;
     margin-left:auto;
     margin-right:auto;
     }

h1, .result {
     text-align:center;
     font-weight:bold;
     }

.error {
     text-align:center;
     font-weight:bold;
     font-style:italic;
     }

.question {
     clear:both;
     font-weight:bold;
     }

#metadata, .comment {
     clear:both;
     font-style:italic;
     }

.hint {
     margin-top:1ex;
     font-style:italic;
     }

.answer {
     margin-left:1em;
     margin-right:1em;
     }

.wrong { text-decoration:line-through }
.correct { font-weight:bold }

.points {
     text-align:center;
     font-style:italic;
     }

.assessment {
     clear:both;
     text-align:center;
     }

.made {
     font-family:sans-serif;
     font-size:x-small;
     text-align:right;
     }

/* styles for screens */
\@media screen {
  html {
     color:black;
     background-color: ${html_bgc};
     }

  h1, .result { 
     border:thick outset;
     padding:12px;
     margin:1em 15%;
     color:#ffffdd;
     background-color:$box_bgc;
     border-color:$border_color;
     }

  .hint, .assessment {
     border:thick inset;
     font-weight:bold;
     padding:1ex;
     color:#ffffdd;
     background-color:$box_bgc;
     border-color:$border_color;
     }

  .resultlink, .home { text-align:center; }

  .error {
     color:red;
     background-color:transparent;
     }

  .question { 
     color:#000088;
     background-color:transparent;
     }

  .answer input {
     color:black;
     background-color:transparent;
     }

  .correct {
     background-color:#ddd;
     color:black;
     }

  .buttons { 
     margin-top:2em;
     margin-bottom:2em;
     text-align:center;
     }

  .buttons input {
     color:#ffffdd;
     background-color:$box_bgc;
     }
}
EOF
  exit;
}


